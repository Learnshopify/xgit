      arrows: false,
      dots: true,
      fade: true,
      adaptiveHeight: true,
      // Add other options as needed
    });

    $('.custom-slideshow .mobile-slide').slick({
      // Mobile slideshow options
      arrows: false,
      dots: true,
      adaptiveHeight: true,
      // Add other options as needed
    });
  });
</script>

{% endjavascript %}
